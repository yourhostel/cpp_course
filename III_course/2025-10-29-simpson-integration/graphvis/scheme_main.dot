digraph scheme_main {
    rankdir=TB;
    bgcolor="#f8f9fa";

    node [
    shape=box,
    style="rounded,filled,bold",
    fontname="DejaVu Sans",
    fontsize=11,
    margin="0.18,0.12",
    color="#444444",
    fillcolor="white"
    ];

    edge [
    color="#444444",
    penwidth=1.3,
    arrowsize=0.8,
    fontname="DejaVu Sans",
    fontsize=10
    ];

    start   [shape=oval, fillcolor="#d1e7dd", label="Початок"];
    menu    [shape=diamond, fillcolor="#fff3cd", label="Меню:\n1 — Табулювання\n2 — Інтеграл (Сімпсон)"];
    readFx  [shape=parallelogram, fillcolor="#e2e3e5", label="Вибір функції f(x)"];
    readAB  [shape=parallelogram, fillcolor="#e2e3e5", label="Ввід меж інтегрування [a, b]"];
    readH   [shape=parallelogram, fillcolor="#e2e3e5", label="Ввід кроку h або кількості n"];
    tabulate [shape=rectangle, fillcolor="#cfe2ff", label="Обчислення значень f(x)\nна відрізку [a, b]"];
    simpson [shape=rectangle, fillcolor="#cfe2ff", label="Обчислення інтегралу\nметодом Сімпсона"];
    output  [shape=parallelogram, fillcolor="#e2e3e5", label="Вивід результатів"];
    stop    [shape=oval, fillcolor="#f8d7da", label="Кінець"];

    start -> menu;
    menu -> readFx [label="1 або 2"];
    readFx -> readAB -> readH;

    readH -> tabulate [label="1"];
    readH -> simpson  [label="2"];

    tabulate -> output;
    simpson  -> output;
    output -> stop;
}
